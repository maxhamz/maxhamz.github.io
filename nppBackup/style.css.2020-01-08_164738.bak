
* {
	
	
	overflow-x: 0;
	padding: 0;
	margin: 0;
	
}

body {
	
	font-family: 'Lucida Sans Typewriter', serif;

}

header {
	
	display: flex;
	align-items: center; 
 	position: fixed; 
	background-color: #fcf3e2; 
	width: 100%;
	top: 0;
	z-index: 20;

}






a {
	color: #633b2f;
	
}

.menupages a li {
	
	display: inline-block;
	text-align: center;
	margin: 5px;
	padding: 5px;
}

.menupages a li:hover {
	color: #986c3d;
}

.subscribe-icon:hover {
	color: red;
}

.login-icon:hover {
	color: blue;
}

.jumbotron {
	
	display: flex;
	margin-top: 63px;
	background: url("./img/coffee_pouring.jpg");
	background-size: contain;
	background-attachment: fixed;
	align-items: center;
	justify-content: center;
	background-repeat: no-repeat;
	height: 100vh;
	
}

#motto {
	
	position: absolute;
	text-align: center;
	background-color: rgba(255,255,255,0.5);
	color: red;
	opacity: 0.5;
	border-radius: 10px;
	padding: 10px;
	margin-top: 0;
	margin-bottom: 40vh;
	
}

.whoami {
	
 	position: relative; 
	margin-top:-250px;
	background-color: #fcf3e2; 
	color: #633b2f;
	width: 100%;
	

	
}







